        fx:controller="com.ruandev.taskflow.fx.ProjetoCardController"
        onMouseClicked="#handleOpenProjeto">

    <children>
        <!-- Nome do projeto -->
        <Label fx:id="nameLabel" layoutX="20" layoutY="20" style="-fx-font-size: 24; -fx-text-fill: white;" text="Nome do Projeto" />

        <!-- Status com cor -->
        <HBox fx:id="statusBox" layoutX="229.0" layoutY="25.0" style="-fx-background-color: #3a3a3a; -fx-background-radius: 10; -fx-padding: 4 8;">
            <Label fx:id="statusLabel" style="-fx-text-fill: white; -fx-font-size: 12;" text="Status" />
        </HBox>

        <!-- NÃºmero de tarefas e texto fixo -->
