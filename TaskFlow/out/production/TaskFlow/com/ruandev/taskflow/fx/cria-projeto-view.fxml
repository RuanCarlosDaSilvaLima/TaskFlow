<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefWidth="400" prefHeight="300"
            style="-fx-background-color: #0F1E2E; -fx-background-radius: 20; -fx-padding: 20;"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="com.ruandev.taskflow.fx.CriaProjetoController">

   <children>
      <VBox spacing="15" alignment="CENTER" AnchorPane.topAnchor="20.0" AnchorPane.bottomAnchor="20.0"
            AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">

         <Label text="Criação de um novo Flow" textFill="WHITE">
            <font>
               <Font name="Ebrima Bold" size="22.0" />
            </font>
         </Label>

         <TextField fx:id="nomeField"
                    promptText="nome"
                    style="-fx-background-radius: 10; -fx-font-size: 16;"
                    prefWidth="300" />

         <DatePicker fx:id="prazoDatePicker"
                     promptText="prazo"
                     style="-fx-background-radius: 10; -fx-font-size: 16;"
                     prefWidth="300" />

         <HBox spacing="10" alignment="CENTER">
            <Button fx:id="cancelarButton"
                    text="Cancelar"
                    prefWidth="120"
                    style="-fx-background-color: #848484; -fx-background-radius: 10; -fx-text-fill: white;" />

            <Button fx:id="criarButton"
                    text="Criar"
                    prefWidth="120"
                    style="-fx-background-color: #2979FF; -fx-background-radius: 10; -fx-text-fill: white;" />
         </HBox>
      </VBox>
   </children>
</AnchorPane>
